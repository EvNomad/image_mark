{
  "manifest_version": 2,
  "name": "ImageMark",
  "description": "This extension bookmarks images on the current page",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-3.2.0.min.js","content.js"]
    }
  ],

  "background": {
  "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon16.png",
    "default_title": "Bookmark images"
    
  },

  "permissions": [
    "background",
    "bookmarks",
    "tabs",
    "https://*/*",
    "http://*/*"
  ]
}